<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"

    android:padding="5dp">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="Roboto-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#f51515"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position :"/>
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/tv_chucvu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" HLV"
            android:textSize="18sp"
             />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#f51515"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Khai Le"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#f51515"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age :"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_tuoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 19"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#f51515"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_ngaysinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 16/02/1999"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#f51515"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price :"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_luong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 3000000"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#f51515"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_gioitinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Men"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#f51515"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_tinhtrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" FA"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#f51515"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="National :"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_quoctich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Viet Nam"
                android:textSize="18sp"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginLeft="280dp"
        android:layout_marginTop="5dp"
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cancel" />
</android.support.v7.widget.CardView>